      }
    
      #uploadButton {
        font-size: 0.8rem;
      }
    
      .material-btn-round {
        width: 30px;
        height: 30px;
        font-size: 12px;
      }
    }
    
    /* Adjustments for Landscape or Larger Screens */
    @media (min-width: 576px) {
      .tab-content {
        width: 100%;
      }
    
      .table {
        font-size: calc(0.85rem + 0.5vw); /* Dynamic text scaling */
      }
    
      .table th, .table td {
        padding: 0.75rem;
      }
