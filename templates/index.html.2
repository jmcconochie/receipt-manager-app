    }
    
    /* Input and File Upload */
    #imagePreviewContainer {
      width: 100px;
      height: 100px;
      border: 1px solid #ccc;
      border-radius: 8px;
      background-color: #f9f9f9;
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    
    #previewImage {
      max-width: 100%;
      max-height: 100%;
      object-fit: cover;
    }
    
    /* Modal Styling */
    .modal-body pre {
      margin: 0;
      background: transparent;
      border: none;
      overflow: auto;
    }
    
    /* Adjustments for Mobile */
    @media (max-width: 576px) {
      .d-flex {
        flex-direction: column;
        gap: 0.5rem;
      }
    
      .navbar {
        height: 45px;
      }
    
      .table {
        font-size: 0.85rem;
      }
    
